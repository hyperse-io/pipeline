{
  "name": "@hyperse/nextra-monorepo-starter-website",
  "version": "0.0.1",
  "description": "Hyperse Nextra Monorepo Starter Website",
  "private": true,
  "homepage": "https://github.com/hyperse-io/nextra-starter#readme",
  "bugs": {
    "url": "https://github.com/hyperse-io/nextra-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/nextra-starter.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "next build && yarn postbuild",
    "postbuild": "next-sitemap && pagefind --site .next/server/app --output-path public/_pagefind",
    "build:ghpage": "cross-env NEXT_BUILD_ENV_OUTPUT='export' next build && yarn postbuild:ghpage",
    "postbuild:ghpage": "next-sitemap && pagefind --site .next/server/app --output-path out/_pagefind",
    "dev": "next dev -p 3000 -H 0.0.0.0",
    "fix-all-files": "eslint . --fix",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "lint": "eslint .",
    "start": "next start -p 3000 -H 0.0.0.0",
    "test": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@heroui/react": "^2.7.10",
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "framer-motion": "^12.18.1",
    "next": "^15.3.4",
    "nextra": "alpha",
    "nextra-theme-docs": "alpha",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@hyperse/eslint-config-hyperse": "^1.4.5",
    "@hyperse/next-config": "^1.0.4",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.29.0",
    "lint-staged": "^16.1.2",
    "next-sitemap": "^4.2.3",
    "pagefind": "^1.3.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^3.25.67"
  }
}
